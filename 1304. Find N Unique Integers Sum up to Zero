class Solution {
    public int[] sumZero(int n) {
        int x = 1;
        int[] ans = new int[n];
        if(n%2 == 0){
            for(int i = 0;i<n;i = i+2){
                ans[i] = x;
                ans[i+1] = -x;
                x++;
            }
        }
        else{
            for(int i = 0;i<n-1;i = i+2){
                ans[i] = x;
                ans[i+1] = -x;
                x++;
            }
            ans[n-1] = 0;
        }
        return ans;
    }
}
