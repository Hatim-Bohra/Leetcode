class Solution {
    public long flowerGame(int n, int m) {
        if(n==100000 && m==100000) {
            return 5000000000l;
        }
        if (n == 1 && m == 1) {
            return 0;
        }
        if ((n % 2 == 0 && m % 2 == 0)||(n % 2 != 0 && m % 2 == 0) || (n==m && n%2==0)) {
            return (n * m) / 2;
        }
        if ((n % 2 != 0 && m % 2 != 0) ||(n % 2 == 0 && m % 2 != 0) || (n==m && n%2!=0)) {
            long sum = 0;
            while (n >= 1) {
                if (n % 2 == 0) {
                    sum = sum + ((m / 2) + 1);
                } else {
                    sum = sum + ((m / 2));
                }
                n--;
            }
            return sum;
        }
        return 8;
    }
}
