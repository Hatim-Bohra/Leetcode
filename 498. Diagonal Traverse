class Solution {
    public int[] findDiagonalOrder(int[][] mat) {
        int n=mat.length;
        int m=mat[0].length;
        int[] res=new int[m*n];
        int ind=0;
        for(int i=0;i<m+n-1;i++){
            if(i%2==0){
                int row=Math.min(n-1,i);
                int col=i-row;
                while(row>=0 && col<m){
                    res[ind++]=mat[row--][col++];
                }
            }
            else{
                int col=Math.min(i,m-1);
                int row=i-col;
                while(row<n && col>=0){
                    res[ind++]=mat[row++][col--];
                }
            }
        }
        return res;
    }
}
