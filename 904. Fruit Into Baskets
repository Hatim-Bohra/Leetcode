class Solution {
    public int totalFruit(int[] fruits) {
        int wstart = 0;
        int res = 0;
        HashMap<Integer, Integer> hashMap = new HashMap<>();
        for (int wend = 0; wend < fruits.length; wend++) {
            int fruit = fruits[wend];
            hashMap.put(fruit, hashMap.getOrDefault(fruit, 0)+1);
            while(hashMap.size() > 2) {
                int rfruit = fruits[wstart];
                int value = hashMap.get(rfruit)-1;
                if (value > 0) {
                    hashMap.put(rfruit, value);
                } 
                else {
                    hashMap.remove(rfruit);
                }
                wstart += 1;
            }
            res = Math.max(res, wend-wstart+1);
        }
        return res;
    }
}
